{
  "realm": "AI-Avatar",
  "clients": [
    {
      "clientId": "frontend-client",
      "redirectUris": [
        "https://localhost/*",
        "https://127.0.0.1/*",
        "https://app.fb1-ecommerce.hs-rw.de/*",
        "https://host.docker.internal/*",
        "http://frontend:80/*",      
        "http://localhost:80/*",    
        "http://keycloak:8080/*"
      ],
      "publicClient": true,
      "webOrigins": ["*"],
      "serviceAccountsEnabled": false
    },
    {
      "clientId": "backend-client",
      "redirectUris": [],
      "publicClient": false,
       "webOrigins": [
        "*",
        "http://frontend:80",
        "http://localhost:80",
        "http://keycloak:8080"
      ],
      "serviceAccountsEnabled": true
    }
  ],
  "roles": [
    { "name": "admin" },
    { "name": "student" },
    { "name": "roomowner" }
  ],
  "userProfile": {
    "attributes": [
      {
        "name": "language",
        "displayName": "Language",
        "required": {
          "roles": [],
          "scopes": [],
          "when": ["ALWAYS"]
        },
        "permissions": {
          "view": ["user", "admin"],
          "edit": ["admin"]
        },
        "annotations": {
          "inputType": "text"
        },
        "enabled": true,
        "multivalued": false
      }
    ]
  }
}
